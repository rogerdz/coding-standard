<?xml version="1.0"?>
<ruleset name="Bss Coding Standard">
    <description>Bss coding standard</description>

    <rule ref="Bss.Commenting.UselessInheritDocComment">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="Bss.Classes.ObjectManager"/>
    <!-- <rule ref="Bss.Templates.RawJavaScript">
        <exclude-pattern>*.php</exclude-pattern>
    </rule> -->

    <rule ref="SlevomatCodingStandard.Commenting.EmptyComment">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>

    <rule ref="Squiz.Commenting.FunctionComment.Missing">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.VariableComment.Missing">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.ClassComment.Missing">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>

    <rule ref="SlevomatCodingStandard.Namespaces.DisallowGroupUse">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.Namespaces.MultipleUsesPerLine">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.TypeHints.DeclareStrictTypes">
        <exclude-pattern>*.phtml</exclude-pattern>
        <properties>
            <property name="linesCountBeforeDeclare" value="0"/>
            <property name="linesCountAfterDeclare" value="0"/>
            <property name="spacesCountAroundEqualsSign" value="0"/>
            <property name="newlinesCountBetweenOpenTagAndDeclare" value="1" />
        </properties>
    </rule>
</ruleset>
