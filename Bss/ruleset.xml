<?xml version="1.0"?>
<ruleset name="Bss Coding Standard">
    <description>Bss coding standard</description>

    <rule ref="Bss.Commenting.UselessInheritDocComment">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="Bss.Classes.ObjectManager"/>

    <rule ref="Squiz.Commenting.FunctionComment.Missing">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.MissingParamTag">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.MissingType">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.MissingParamName">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.IncorrectTypeHint">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>

    <rule ref="Squiz.Commenting.VariableComment.Missing">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.VariableComment.MissingVar">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.VariableComment.WrongStyle">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>

    <rule ref="Squiz.Commenting.ClassComment.Missing">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.ClassComment.WrongStyle">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>

    <rule ref="SlevomatCodingStandard.Namespaces.DisallowGroupUse">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.Namespaces.MultipleUsesPerLine">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.Namespaces.RequireOneNamespaceInFile">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>

    <rule ref="SlevomatCodingStandard.TypeHints.DeclareStrictTypes">
        <exclude-pattern>*.phtml</exclude-pattern>
        <exclude name="SlevomatCodingStandard.TypeHints.DeclareStrictTypes.IncorrectStrictTypesFormat"/>
        <properties>
            <property name="linesCountBeforeDeclare" value="0"/>
            <property name="linesCountAfterDeclare" value="1"/>
        </properties>
    </rule>
    <rule ref="SlevomatCodingStandard.TypeHints.PropertyTypeHint"/>
    <rule ref="SlevomatCodingStandard.TypeHints.UselessConstantTypeHint"/>

    <rule ref="SlevomatCodingStandard.Commenting.EmptyComment">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.Commenting.UselessFunctionDocComment">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>

    <rule ref="SlevomatCodingStandard.Classes.RequireConstructorPropertyPromotion">
        <exclude-pattern>*.phtml</exclude-pattern>
    </rule>
    <rule ref="SlevomatCodingStandard.Classes.ClassConstantVisibility"/>
    <rule ref="SlevomatCodingStandard.Classes.MethodSpacing">
        <properties>
            <property name="minLinesCount" value="1"/>
            <property name="maxLinesCount" value="2"/>
        </properties>
    </rule>
</ruleset>
